@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>

}

<div class="text-center">
    <br />
    <h4>Issue Reporing Form </h4>
    <br />

    <form style="align-self:left;" method="post">
        <div class="form-group">
            <label style="font-weight:bold; float: left;" for="exampleFormControlTextarea1">Please discribe the issue you are facing</label>
            <textarea class="form-control" id="IssesContent" name="IssesContent" rows="3"></textarea>
        </div>
        <div style=" display: flex;
    height: 40px;
      margin-bottom:5px; ">
            <label style="font-weight:bold;float: left;">Please select the urgency level</label>

            <div class="form-check form-check-inline" style="margin-bottom:0.5rem; padding-left:5px;">
                <input class="form-check-input" style="padding-left:5px;" type="radio" name="UrgencyLevel" id="Is_urgent" value="urgent">
                <label class="form-check-label" for="inlineRadio1">Urgent and requires immediate response</label>
            </div>
            <div class="form-check form-check-inline" style="margin-bottom:0.5rem; padding-left:5px;">
                <input class="form-check-input" type="radio" name="UrgencyLevel" id="Is_not_urgent" value="imporant">
                <label class="form-check-label" for="inlineRadio2">Important but not urgent</label>
            </div>
            <div class="form-check form-check-inline" style="margin-bottom:0.5rem; padding-left:5px;">
                <input class="form-check-input" type="radio" name="UrgencyLevel" id="Is_not_urgent" value="light">
                <label class="form-check-label" for="inlineRadio2">Not urgent</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Report</button>
    </form>
</div>
